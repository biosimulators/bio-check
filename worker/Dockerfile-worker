RUN apt-get update  \
    && apt-get install -y \
    meson \
    g++ \
    gfortran \
    libblas-dev \
    liblapack-dev \
    libgfortran5 \
    libhdf5-dev \
    cmake \
    make \
    git \
    swig \
    libc6-dev \
    libx11-dev \
    libc6 \
    libgl1-mesa-dev \
    pkg-config \
    curl \
    tar \
    libgl1-mesa-glx \
    libice6 \
    libpython3.10 \
    libsm6 \
    gnupg \
    libboost-chrono-dev \
    libboost-math-dev \
    libboost-serialization-dev \
	&& conda env create -n server -f config/environment.worker.yml -y \
    && rm -rf config \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get autoremove -y \
    && apt-get clean \
    && conda clean --all --json -y

ENTRYPOINT ["bash", "-c", "source ~/.bashrc && python3 main.py"]

