FROM python:3.11-slim-bullseye
LABEL authors="alexanderpatrie"

RUN mkdir /app

WORKDIR /app

RUN mkdir /app/bio_check && touch /app/bio_check/__init__.py

COPY bio_check/io.py /app/bio_check/io.py

COPY assets/Pipfile /app/assets/Pipfile
COPY assets/Pipfile.lock /app/Pipfile.lock

ENV CRYPTOGRAPHY_DONT_BUILD_RUST=1

# hdf5 deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libc-dev \
    linux-headers-arm64 \
    libjpeg-dev \
    zlib1g-dev \
    libmariadb-dev \
    libffi-dev \
    libopenblas-dev \
    libgfortran5 \
    liblapack-dev \
    build-essential \
    libssl-dev \
    libhdf5-dev \
    pkg-config \
    wget \
    build-essential \
    cmake \
    swig \
    libbz2-dev



# Clean up the apt cache and remove build dependencies to reduce image size
RUN apt-get clean && rm -rf /var/lib/apt/lists/* && apt-get autoremove -y

ENV PYTHONUNBUFFERED 1

# install pipenv and set up environment
RUN pip install pipenv \
    && pipenv install --system --deploy

# RUN pip install --upgrade pip && pip install --no-cache-dir -r ./assets/requirements.base.txt

